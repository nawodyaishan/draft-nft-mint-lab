{
  "name": "draft-nft-mint-lab",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "https://github.com/nawodyaishan/draft-nft-mint-lab.git",
  "author": "Nawodya Ishan <nawodyain@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "yarn hardhat test",
    "test-staging": "yarn hardhat test --network sepolia",
    "lint": "yarn solhint 'contracts/*.sol'",
    "lint:fix": "yarn solhint 'contracts/**/*.sol' --fix",
    "format": "yarn prettier --write .",
    "coverage": "yarn hardhat coverage",
    "typechain": "yarn hardhat typechain",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "deploy:draftminter:local": "yarn hardhat run --network hardhat scripts/deployDraftMinter.ts",
    "deploy:draftminter:sepolia": "yarn hardhat run --network sepolia scripts/deployDraftMinter.ts",
    "deploy:draftminter:fuji": "yarn hardhat run --network fuji scripts/deployDraftMinter.ts",
    "deploy:draftmultiminter:local": "yarn hardhat run --network hardhat scripts/deployDraftMultiMinter.ts",
    "deploy:draftmultiminter:sepolia": "yarn hardhat run --network sepolia scripts/deployDraftMultiMinter.ts",
    "deploy:draftmultiminter:fuji": "yarn hardhat run --network fuji scripts/deployDraftMultiMinter.ts",
    "deploy:draftmultiminter:mumbai": "yarn hardhat run --network mumbai scripts/deployDraftMultiMinter.ts",
    "verify:draftmultiminter:mumbai": "hardhat verify --network mumbai"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.1",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.2.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.3.3"
  }
}
